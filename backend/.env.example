# Application
NODE_ENV=development
PORT=3000
API_PREFIX=api/v1

# CORS: allowed frontend origin (required in production)
FRONTEND_URL=http://localhost:5173

# Database
DATABASE_URL=postgresql://postgres:password@localhost:5432/library?schema=public

# JWT (use a strong secret in production)
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRATION=7d

# Bcrypt
BCRYPT_SALT_ROUNDS=10
